# Check for the existence of "mr" multiple repository tool. (used with VIM sub-repos)
function check_mr {
	command -v mr >/dev/null 2>&1
 
	if [ $? -eq 1 ]; then
	   echo_warn " MR git bundle manager is missing. Install 'mr'. "
	   echo_warn " Run: 'cd ~ && mr -j5 update ' "
	fi
}  

