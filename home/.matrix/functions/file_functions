#############################
# file functions
## ## ## ## ##
# shellcheck shell=bash
#############################

function own() {
  local OWNER_USER
  local OWNER_GROUP
  OWNER_USER=$(id -u -n)
  OWNER_GROUP=$(id -g -n)
  sudo chown -R "${OWNER_USER}:${OWNER_GROUP}" "${1:-.}"
}

# echo the PWD subdirectory only "/user/home/me" #=> "me"
function pwsd() {
  echo "${PWD##*/}"
}