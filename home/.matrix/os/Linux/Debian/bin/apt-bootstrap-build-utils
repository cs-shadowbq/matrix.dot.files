#!/usr/bin/env bash

apt-get update
apt-get upgrade -f -y

### Basic Build tools
sudo apt install build-essential -y
sudo apt install checkinstall -y

### C/C++ advance tools
sudo apt install autoconf automake -y

### Libraries
sudo apt install libreadline-gplv2-dev libncursesw5-dev libssl-dev libsqlite3-dev tk-dev libgdbm-dev libc6-dev libbz2-dev -y
sudo apt install zlib1g-dev -y

### Additional dev tools
sudo apt install bison m4 socat p7zip-full ctags spell global -y

### Additional security tools
sudo apt install bmon sysstat tree htop screen strace -y

### FFI Toolchain
sudo apt install libffi-dev -y
