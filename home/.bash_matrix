##########################
# Matrix Master Configuration to load additional extensions into bash

# See local libreadline for keymaps
#~/.inputrc

###########################
# Uncomment lines to include the extensions

callback_pwd=`pwd`
cd "$HOME"

###########################
# Proxy configs 
# $globalurl_proxy is used to set envs
[ "$matrix_ext_proxy" == true ] && source "$HOME"/.matrix/extentions/proxied/.bash_extension

###########################
# Proxy configs 
source "$HOME"/.matrix/functions/.bash_extension

###########################
# Matrix Plugins configs 
[ "$matrix_ext_history" == true ] && source "$HOME"/.matrix/extentions/history/.bash_extension
[ "$matrix_ext_python" == true ] && source "$HOME"/.matrix/extentions/python/.bash_extension
[ "$matrix_ext_ruby" == true ] && source "$HOME"/.matrix/extentions/ruby/.bash_extension
[ "$matrix_ext_nodejs" == true ] && source "$HOME"/.matrix/extentions/nodejs/.bash_extension
[ "$matrix_ext_go" == true ] && source "$HOME"/.matrix/extentions/go/.bash_extension
[ "$matrix_ext_completions" == true ] && source "$HOME"/.matrix/extentions/completions/.bash_extension
[ "$matrix_ext_powerline" == true ] && source "$HOME"/.matrix/extentions/powerline/.bash_extension
[ "$matrix_ext_gcc" == true ] && source "$HOME"/.matrix/extentions/gcc/.bash_extension
[ "$matrix_ext_docker" == true ] && source "$HOME"/.matrix/extentions/docker/.bash_extension


##########################
# Final .matrix Commands to be executed
# Defined commonly in .matrix/functions

[ "$matrix_load_ssh_keys" == true  ] && load_ssh_keys
symlink_alts
xpull_assign
coreutil_check
mr_check
[ "$matrix_powerline" == true ] && check_powerline

##########################
# Check for .matrix consistency
if [ "$matrix_consistency" == true ]; then
    check_matrix_online
    check_matrix_local
fi

##########################
# Additional non-global Configs/Function calls can go into ~/.bash_local
# such as 'extended_completions'
cd $callback_pwd
